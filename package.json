{
  "name": "vickywane",
  "private": true,
  "description": "My personal space on the wild internet!",
  "author": "Victory Nwani vickywane@gmail.com",
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "sanity"
  ],
  "scripts": {
    "build:frontend": "turbo build --filter=./apps/frontend",
    "build:sanity": "turbo build --filter=./apps/sanity",
    "dev:frontend": "turbo run dev --filter=./apps/frontend",
    "test": "turbo run test --filter=./apps/frontend",
    "dev:sanity": "turbo run dev --filter=./apps/sanity",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "start": "turbo run start",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "keywords": [
    "nextjs",
    "portfolio"
  ],
  "release": {
    "ci": false,
    "successComment": false,
    "branches": [
      "main",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]nn${nextRelease.notes}"
      }
    ]
  },
  "packageManager": "pnpm@10.0.0"
}
